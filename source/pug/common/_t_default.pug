block variables

include _i_data.pug
include _i_components.pug

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title= titleContent
    meta(name="description" content="Официальный поставщик измерительного оборудования от ведущих мировых производителей")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="cmsmagazine" content="cdc79537f1d9f113c73cd2fd46ca0125")
    meta(name="author" content="Веб-студия WayToStart")
    link(rel="preload" href="fonts/roboto-light.woff2" as="font")
    link(rel="preload" href="fonts/roboto-regular.woff2" as="font")
    link(rel="preload" href="fonts/roboto-medium.woff2" as="font")
    link(rel="preload" href="fonts/roboto-bold.woff2" as="font")
    link(rel="preload" href="fonts/roboto-black.woff2" as="font")
    link(rel="stylesheet" href="css/main.min.css")

  body.page(class='page--' + pageName)
    .page__header
      +page-header(pageName, pageTitle)
    .page__main
      main.page-main(class='page-main--' + pageName)
        block page-main
    .page__footer
      +page-footer(pageName)
    block custom-scripts
    script(src='js/picturefill.js')
