mixin page-header(pageHeader_pageId, pageHeader_pageHeading)
  header.page-header(class='page-header--' + page.id)
    .page-header__inner
      .page-header__logo
        +logo(pageHeader_pageId, pageHeader_pageHeading)
      .page-header__navigation
        +navigation(pageHeader_pageId, 'header')
      ul.page-header__contact-list
        li.page-header__contact
          a.page-header__contact-content.page-header__contact-content--email(href='mailto:info@mail.ru')
            | info@mail.ru
        li.page-header__contact
          a.page-header__contact-content.page-header__contact-content--tel(href='tel:+74956645520')
            | +7 (495) 664-55-20
    each name in hasBanner
      if (name === pageHeader_pageId)
        .page-header__banner
          +banner(pageHeader_pageHeading)
    each name in hasBreadcrumbs
      if (name === pageHeader_pageId)
        .page-header__breadcrumbs
          +breadcrumbs()
