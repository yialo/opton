mixin navigation(navigation_pageId, componentPosition)
  nav.navigation(class='navigation--' + componentPosition)
    ul.navigation__list
      mixin navigation__item(itemPath, itemText)
        li.navigation__item
          - let itemLink = {href: itemPath + '.html'};
          if (itemPath === navigation_pageId)
            - itemLink = '';
          a.navigation__link&attributes(itemLink)= itemText
      each value, key in navigationData
        +navigation__item(key, value)
