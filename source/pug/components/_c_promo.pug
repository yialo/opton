mixin promo()
  header.promo
    .promo__inner
      .promo__slider
        ul.promo__list
          mixin promo__item(itemNumber, itemTitle, itemSubtitle)
            li.promo__item(class=`promo__item--${itemNumber}`)
              h3.promo__title= itemTitle
              p.promo__subtitle= itemSubtitle
          - var i = 1;
          while i <= 3
            +promo__item(promoItemTitles[i - 1], promoItemSubtitles[i - 1])
            - i++;
