mixin promo()
  header.promo
    .promo__inner
      .promo__slider
        ul.promo__list
          mixin promo__item(promoItem_options)
            li.promo__item(class=`promo__item--${promoItem_options.number}`)
              h3.promo__title= promoItem_options.title
              p.promo__subtitle= promoItem_options.subtitle
          - let i = 0;
          while i < promoItemsData.length
            +promo__item({
              number: i + 1,
              title: promoItemsData[i].title,
              subtitle: promoItemsData[i].subtitle
            })
            - i++;


